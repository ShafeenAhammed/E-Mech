<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= locals.title? title:"Login System" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/style.css">
</head>

<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your User name and password!</p>
                                <form action="/user_signin" method="POST" onsubmit="return validateAll()">
                                   
                                    <div class="form-outline form-white mb-4">
                                        <input type="text" id="username" class="form-control form-control-lg" placeholder="Enter User name" name="username" onblur="validateName()"/>
                                        <span id="vlduser" style="color: red;"></span>
                                        
                                    </div>
    
                                    <div class="form-outline form-white mb-4">
                                        <input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Enter Password" name="userpassword" onblur="validatePass()"/>
                                        <span id="vldPass" style="color: red;"></span>
                                        
                                    </div>

                                    <button class="btn btn-outline-light btn-lg px-5 rounded-pill" type="submit">Login</button>
                                    <br>
                                    <br>
                                    <div>
                                        <a href="/forgot_password">Forgot Password?</a>
                                        <p class="mb-0">Don't have an account? <a href="/user_registration" class="text-blue-50 fw-bold">Sign
                                                Up</a>
                                        </p>
                                    </div>
                                    <% if(locals.logout){ %>
                                        <div class="alert alert-success text-center"><%= logout%></div>
                                    <%}%>
                                    <% if(locals.msg){ %>
                                        <div class="alert alert-danger text-center"><%= msg%></div>
                                    <%}%>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
<script>
     function validateName(){
        const user=document.getElementById("username").value;
        if(user===""){
            document.getElementById("vlduser").innerHTML="Enter valid user name";
            return false;
        }else{
            return true;
        }
    }



    function validatePass(){
        const pass=document.getElementById("typePasswordX").value;
        if(pass===""){
            document.getElementById("vldPass").innerHTML="Enter valid password";
            return false;
        }else{
            document.getElementById("vldPass").innerHTML="";
            return true;
        }
    }



    function validateAll(){
        if(validateName() && validatePass()){
            return true;
        }else{
            return false;
        }
    }

</script>
</html>