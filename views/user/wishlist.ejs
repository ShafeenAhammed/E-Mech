<%- include('userNavBar')%>
<section class="vh-100" style="background-color: #f4f4f4;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <p><span class="h2">Wishlist </span><span class="h4">(<%=userDetails[0].wishlist.length%> item in your list)</span></p>
  
          <div class="card mb-4">
            <% for(let i=0;i<userDetails[0].wishlist.length;i++){%>
                <div class="card-body p-4">
  
                    <div class="row align-items-center justify-content-center">

                      <!-- Add Delete Button Here -->
                      <div class="col-md-2 d-flex justify-content-center align-items-center">
                        <div>
                            <button type="button" class="btn btn-danger btn-md"><a href="/delete_wishlist?delete=<%= userDetails[0].wishlist[i].product_id%>" name="delete" style="text-decoration: none; color: #f4f4f4;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                              <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                            </svg></a> </button>
                        </div>
                      </div>

                      <div class="col-md-2">
                        <img src="/static/uploads/<%= userDetails[0].wishlist[i].product_image%>"
                          class="img-fluid" alt="Generic placeholder image">
                      </div>
                      <div class="col-md-2 d-flex justify-content-center">
                        <div>
                          <p class="small text-muted mb-4 pb-2">Name</p>
                          <p class="lead fw-normal mb-0"><%= userDetails[0].wishlist[i].product_name%></p>
                        </div>
                      </div>
                      
                      <div class="col-md-2 d-flex justify-content-center">
                        <div>
                          <p class="small text-muted mb-4 pb-2">Price</p>
                          <p class="lead fw-normal mb-0"><%= userDetails[0].wishlist[i].product_price%></p>
                        </div>
                      </div>
                     
                      <div class="col-md-2 d-flex justify-content-center align-items-center">
                          <div>
                              <!-- <button type="button" class="btn btn-warning btn-md">Move to cart</button> -->
                              <a href="/addtocart?prodData=<%= userDetails[0].wishlist[i].product_id%>" class="btn btn-primary">Move to Cart</a>
                          </div>
                      </div>
                    </div>
        
                  </div>
                <%}
            %>
           
          </div>
    
          <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-warning btn-lg me-2"><a href="/user_homepage" style="text-decoration: none;color: black;"><b>Continue shopping</b></a></button>
            
          </div>
  
        </div>
      </div>
    </div>
  </section>
  <footer class="bg-dark text-white text-center py-3">
    <div class="container">
        <p>&copy; 2023 Your Company. All rights reserved.</p>
    </div>
</footer>
</body>
</html>