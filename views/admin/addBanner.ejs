<%- include('adminNavbar')%>
    <section style="background-color: rgb(201, 209, 206);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card mt-5 mb-5 border-warning border-3">
                        <div class="card-header bg-warning text-white text-center">
                            <h4 class="mb-0 text-dark">Add banner</h4>
                        </div>
                        <div class="card-body">
                            <form action="/admin_panel/banner_management/add_banner" method="post" enctype="multipart/form-data" onsubmit="return validateAll()">
                                <div class="mb-3">
                                    <label for="bannerId" class="form-label" hidden>Banner ID</label>
                                    <input type="text" class="form-control" id="bannerId" name="banner_id" placeholder="Enter banner ID"
                                        hidden >
                                </div>
                                <div class="mb-3">
                                    <label for="bannerName" class="form-label">banner Name</label>
                                    <input type="text" class="form-control" id="bannerName" name="banner_name"
                                        placeholder="Enter banner Name" onblur="validateName()" >
                                    <span id="vldname" style="color: red;"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="bannerDescription" class="form-label">banner Description</label>
                                    <textarea class="form-control" id="bannerDescription" name="banner_description" rows="3"
                                        placeholder="Enter banner Description" onblur="validateDesc()" ></textarea>
                                    <span id="vlddesc" style="color: red;"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="bannerImage" class="form-label">banner Image</label>
                                    <input class="form-control" type="file" id="formFile" name="banner_image" onblur="validateFile()">
                                    <span id="vldimg" style="color: red;"></span>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-outline-warning btn-block  text-dark"><b>Add
                                            banner</b></button>
                                </div>
                                <br>
                                <% if(locals.msg){ %>
                                    <div class="alert alert-danger text-center"><%= msg%></div>
                                <%}%>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; 2023 Your Company. All rights reserved.</p>
        </div>
    </footer>
    
    <!-- Bootstrap JS -->
    
    </body>
    <script>

        function validateName(){
            const user=document.getElementById("bannerName").value;
            if(user===""){
                document.getElementById("vldname").innerHTML="Enter banner name";
                return false;
            }else{
                return true;
            }
        }

        function validateDesc(){
            const user=document.getElementById("bannerDescription").value;
            if(user===""){
                document.getElementById("vlddesc").innerHTML="Enter banner description";
                return false;
            }else{
                return true;
            }
        }
        function validateFile(){
            const user=document.getElementById("formFile").value;
            if(user===""){
                document.getElementById("vldimg").innerHTML="Upload image file";
                return false;
            }else{
                return true;
            }
        }
    
       
        
    
        function validateAll(){
            if(validateName() && validateDesc() && validateFile()){
                return true;
            }else{
                return false;
            }
        }
    
    </script>
    </html>